<div class="main--pos">
  <h1>Add a Advertiser Ring Pool Bulk</h1>
</div>

<%= form_for(@advertiser_promo_number_bulk_buster, :html => {:multipart => true}) do |f|%>
    <% if @advertiser_promo_number_bulk_buster.errors.any? %>
        <h2>Errors:</h2>
        <ul>
          <%= @advertiser_promo_number_bulk_buster.errors.full_messages.each do |message| %>
              <li> <%=  puts message.first %> </li>
          <% end %>
        </ul>
    <% end %>

      <section class="main--pos">
        <div class="title--header">
          Credentials
        </div>

        <div class="inner">
          <div class="tile">
            <p>
              <%= f.label :task_description, 'Task Description' %> <br />
              <%= f.text_area :task_description %>
            </p>
            <p>
              <%= f.label :network_id, 'Network ID' %> <br />
              <%= f.text_field :network_id %>
            </p>
          </div>
          <div class="tile">
            <p>
              <%= label_tag :api_token, 'API Token' %> <br />
              <%= text_field_tag :api_token %>
            </p>

            <p>
              <%= f.radio_button :request_type, 'post', :checked => true %> Create
              <br>
              <%= f.radio_button :request_type, 'put', :checked => true %> Update
            </p>
            <br>
          </div>
        </div>
      </section>

      <section class="main--pos">
        <div class="title--header">
         Finalize
        </div>

      <div class="inner">
        <div class="tile">
          <div class="inner">
          <div class="tile">
          <p>
            <%= label_tag :attachment, 'Input File' %> <br />
            <%= file_field_tag :attachment %>
          </p>
          <p>
            <%= f.submit "Bust!" %>
          </p>
        </div>
       </div>
        </div>
      </div>
      </section>
<% end %>
