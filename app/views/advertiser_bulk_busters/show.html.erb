<br/><br/>
<div class="main--pos">
  <h1><%= puts "#{@advertiser_bulk_buster.task_description.upcase} Results" %></h1>
</div>

<%= form_for(@advertiser_bulk_buster, :html => {:multipart => true}) do |f|%>
    <section class="main--pos">
      <div class="title--header">
        STATS FOR  <%= "#{@advertiser_bulk_buster.task_description}"%>
        <div style="font-size: 100%;">
          <%= link_to "Input File", "/uploads/#{@advertiser_bulk_buster.input_filename}" %> |
          <%= link_to "Results", "/output/#{@advertiser_bulk_buster.output_filename}" %>
        </div>
      </div>
      <div class="hulk_background">
        <div class="tile">
          <div class="inner">
            <p>
              <%= f.label :success_count, "Campaigns Created Successfully: " %> <span class="success_color"> <%= "#{@success_count}" %> </span> <br/>
            </p>
            <p>
              <%= f.label :failure_count, "Campaigns Failed to be Created: " %> <span class="failure_color"> <%= "#{@failure_count}" %> </span> <br/>
            </p>
            <p>
            </p>
            <br/>
          </div>
        </div>
      </div>
    </section>
<% end %>

